@model ProyectoFinal.Models.Marcas

@{
    ViewBag.Title = "AddMarcas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddMarcas</h2>


@using (Html.BeginForm("CreateMarcas", "Mantenimiento"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Marcas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MarcaName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MarcaName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MarcaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Administracion","Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
