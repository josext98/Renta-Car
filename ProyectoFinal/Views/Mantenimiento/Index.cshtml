@model IEnumerable<ProyectoFinal.Models.Vehiculos>

@{
    ViewBag.Title = "Lista de Vehiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de vehiculos</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "AddVehiculos")
</p>
<br/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoPlaca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripción)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoCombustible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoVehiculo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoPlaca)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Descripción)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.MarcaName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ModeloName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TipoCombustibleName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TipoVehiculoName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditVehiculos", new { id = item.Id }) |
            @* @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            @Html.ActionLink("Rentar", "AddRentar", "Inspeccion", new { id = item.Id },"")
        </td>
    </tr>
}

</table>
